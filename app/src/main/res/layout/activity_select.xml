<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="선불 이용 안내"
        android:textColor="@color/black"
        android:fontFamily="@font/font"
        android:textSize="45dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_height="0.5dp"
                android:background="#606060"
                android:layout_marginTop="10dp"/>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="현재 시간 "
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:fontFamily="@font/font"
            android:textSize="40dp"/>


        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45dp"
            android:textStyle="bold"
            android:textColor="#1469AE"
            android:fontFamily="@font/font"
            android:text="현재 시간 나올 곳"
            android:layout_gravity="right"/>
            <View
                android:layout_width="300dp"
                android:layout_gravity="left"
                android:layout_height="0.5dp"
                android:background="#606060"
                android:layout_marginTop="20dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="설정 시간"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:fontFamily="@font/font"
            android:textSize="40dp"/>

    <TextView
        android:id="@+id/txtbtn"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="시간 설정"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:timePickerMode="spinner"
        android:textSize="40dp"
        android:layout_gravity="right"
        android:background="@drawable/button_background2"
        />

            <View
                android:layout_width="300dp"
                android:layout_gravity="left"
                android:layout_height="0.5dp"
                android:background="#606060"
                android:layout_marginTop="20dp"/>


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="이용 시간  : "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:textSize="25sp"/>


        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="25sp"
            android:text="이용 시간 나올 곳"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="이용 금액  : "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:textSize="25sp"/>


        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="25sp"
            android:text="이용 금액 나올 곳"/>

    </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="이용시간(분)(200원)+대여비용(1500원)입니다."/>
            <View
                android:layout_width="300dp"
                android:layout_gravity="left"
                android:layout_height="0.5dp"
                android:background="#606060"
                android:layout_marginTop="10dp"/>

            <CheckBox
                android:id="@+id/safecheck"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:text="안전수칙을 확인해주세요!"
                android:textSize="33dp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:fontFamily="@font/font"
                />
            <Button
                android:id="@+id/safecheckbtn"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:background="@drawable/button_background2"
                android:text="안전수칙 보러가기"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_gravity="right"/>

            <View
                android:layout_width="300dp"
                android:layout_gravity="left"
                android:layout_height="0.5dp"
                android:background="#606060"
                android:layout_marginTop="10dp"/>

            <CheckBox
                android:id="@+id/inforcheck"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:text="안내 내용 확인해주세요!"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:fontFamily="@font/font"
                />
            <Button
                android:id="@+id/inforbtn"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:background="@drawable/button_background2"
                android:text="안내 내용 보러가기"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_gravity="right"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:backgroundTint="#00adf4"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_background2"
        android:text="이용 시작"
        android:textSize="30dp"/>

        </LinearLayout>
</ScrollView>

</LinearLayout>